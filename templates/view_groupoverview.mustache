{{!
    @template mod_groupoverview/view_groupoverview

    Template which defines the overview of the groups of the course.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * courseid
    * categories

    Example context (json):
    {
        "courseid": 1,
        "categories":
        [
            {
                "id": 1, 
                "name": "Desktop", 
                "description": "In this category are all the groups working on a desktop application.", 
                "active": true, 
                "linked_groups":
                [
                    {
                        "id": 2,
                        "name": "Circles"
                    },
                    {
                        "id": 5,
                        "name": "JournalEditor"
                    }
                ]
            },
            {
                "id": 2, 
                "name": "Mobile", 
                "description": "All groups working on an app are listed in this category.", 
                "active": false,
                "linked_groups":
                [
                    {
                        "id": 4,
                        "name": "PictureSharing"
                    },
                    {
                        "id": 6,
                        "name": "DrawingApp"
                    }
                ]
            },
            {
                "id": 3, 
                "name": "Web", 
                "description": "Here are all groups working on a website.", 
                "active": false,
                "linked_groups":
                [
                    {
                        "id": 1,
                        "name": "NiceBnB"
                    },
                    {
                        "id": 3,
                        "name": "CityGuide"
                    }
                ]
            }
        ]
    }
}}

<div class="box">
    <nav>
    <ul class="nav nav-pills">
        {{#categories}}
              <li {{#active}}class="active"{{/active}}><a data-toggle="pill" href="#{{id}}">{{name}}</a></li>
          {{/categories}}
    </ul>
    </nav>

    <div class="tab-content">
        {{#categories}}
        <div id="{{id}}" class="tab-pane fade {{#active}} in active {{/active}}">
            {{> mod_groupoverview/category}}
        </div>
        {{/categories}}
    </div>
</div>